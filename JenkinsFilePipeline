pipeline{
    agent {
        docker {
            image 'node:18.17.1-alpine3.18'
        }
    }

    environment {
    FIREBASE_DEPLOY_TOKEN = credentials('firebase-token')
    }

    stages{
        stage('Building'){
            steps{
            sh 'npm install -g firebase-tools'
            }
        } 

         stage('Testing'){
            steps{
            echo 'This is testing'
            }
        }

        stage('Staging'){
            steps{
            sh 'firebase deploy -P calc-replica-staging --token "1//06BxqhyHLr1AGCgYIARAAGAYSNwF-L9IrDuduMHUZJaWa_a0eVFU823hpH1PL39-wPXnGd6kiPxAfXyZYMm2tU3_DhBt5egSDoc8"'
            }
        }

        stage('Production'){
            steps{
            sh 'firebase deploy -P calc-replica-production --token "1//06BxqhyHLr1AGCgYIARAAGAYSNwF-L9IrDuduMHUZJaWa_a0eVFU823hpH1PL39-wPXnGd6kiPxAfXyZYMm2tU3_DhBt5egSDoc8"'
            }
        }
    }
}
